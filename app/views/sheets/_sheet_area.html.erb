	<div class="tab-content">
		<% if @page_data.any?%>
		<% @page_data.each do |s, t| %>
			<div role="tabpanel" class="tab-pane" id="<%= s.name.gsub("%20", "") %>">
				
					<%= render @page_data[s] %>
					These are some tabs
				
			</div>
		<% end %>
		<% end %>
		<div role="tabpanel" class="tab-pane" id="add"><%= render :partial => 'sheets/sheet_form' %></div>
	</div>
	
	<script type="text/javascript">
	
	$('#tabs a:first').tab('show'); // Select first tab
	
	</script>
