  	<% if @page_data.any? %>
  	<% @page_data.each do |s, t| %>
  		<li role="presentation" id="tabs"><a href="#<%= s.name %>" aria-controls=<%= s.name.gsub("%20", "") %> role="tab" data-toggle="tab"><%=s.name %></a></li>
